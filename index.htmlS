    // Obtener texto para tipo de pago
    function getPaymentTypeText(type) {
      switch (type) {
        case 'full': return 'Pago completo';
        case 'interest': return 'Solo interés';
        case 'capital': return 'Solo capital';
        default: return type;
      }
    }

